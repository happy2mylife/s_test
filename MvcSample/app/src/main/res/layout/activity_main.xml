<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editHobby"
        android:layout_below="@+id/editName"
        android:layout_marginTop="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editName"
        android:text="Hobby"
        android:onClick="onClickFind" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnRegister"
        android:layout_below="@+id/editHobby"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="onClickAdd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refer"
        android:id="@+id/btnRef"
        android:layout_alignTop="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:onClick="onClickRef" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editId"
        android:layout_below="@+id/btnRegister"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/btnRegister"
        android:hint="input id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/btnSearch"
        android:layout_alignBottom="@+id/editId"
        android:layout_alignStart="@+id/btnRef"
        android:onClick="onClickFind" />
</RelativeLayout>
